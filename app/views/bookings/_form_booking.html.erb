  <%= simple_form_for [@experience, @booking], data: { controller: 'flatpickr' } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :when, as: :string,
        input_html: {
          class: "datepicker", id: "cal-click",data: { inline: true }
        }
      %>

      <ul class="list-inline">
        <li class="list-inline-item">
          <%= f.input :suprise%>
        </li>
        <li class="list-inline-item">
          <i class="fa-solid fa-circle-info"
          data-controller="tooltip"
          data-bs-toggle="tooltip"
          data-bs-placement="right"
          title="when you click this box, your booking will not be sent to your partner for making suprise "></i>
        </li>
        <div class="d-flex">
          <li class="p-2 w-100"><%=@experience.cost %></li>
          <li class="form-actions p-2 flex-shrink-1">
            <%= f.button :submit, class: "disabled btn-book", id: "show-book" %>
          </li>
        </div>
      </ul>
    </div>

  <% end %>
</div>

<script>
  const cal = document.querySelector('#cal-click');
  const showBook = document.querySelector('#show-book');
  cal.addEventListener("change", () => {
    showBook.classList.remove("disabled");
  });
</script>
