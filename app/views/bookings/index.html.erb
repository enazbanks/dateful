<div class="container text-center" style="width: 100%; margin: auto; min-height: 100vh; margin-top: 5%; margin-bottom: 15%;">
  <%# <div class="row justify-content-center mb-3">
    <h3 class="text-center mb-0"> Your Bookings </h3>
  </div> %>
  <div class="row align-items-center justify-content-between mb-4 mt-5 border-bottom">
    <div class="col-12 col-md-6">
        <h2 class="text-start mb-0"> Upcoming dates</h2>
    </div>
  </div>
  <% @bookings.each do |booking| %>
    <% if booking.upcomming_booking? %>
      <% unless booking.suprise? && booking.secret_list.include?(current_user.partner.id.to_s)%>
      ` <%= render 'bookings/book', {booking: booking} %>
      <% else %>
        <%= render 'bookings/secret_book', {booking: booking} %>
      <% end %>
    <% end %>
  <% end %>
  <div class="row align-items-center justify-content-between mb-4 border-bottom" style="margin-top: 7%;">
    <div class="col-12 col-md-6">
        <h2 class="text-start mb-0"> Past Bookings </h2>
    </div>
  </div>
  <% @bookings.each do |booking| %>
    <% unless booking.upcomming_booking? %>
      <%= render 'bookings/book', {booking: booking} %>
    <% end %>
  <% end %>
</div>

<div class="second-banner">
  <div class="second-banner-content text-center d-flex justify-content-around">
    <div class="flex-item" id="second-banner-text">
      <h2 id="second-banner-header">What people are saying</h2>
      <br>
      <br>
        <h5><strong>So much fun!</strong></h5>
          <p class="banner-review-text">Dateful has brought back the excitement in my marriage! I've been able to plan surprise dates for my husband in Germany without giving away all the details. It's easy to use and suits my busy lifestyle. </p>
          <p class="banner-review-text">- Talina, Richmond</p>
      <%#= link_to "Plan my date", experiences_path, class: "btn btn-primary", id: "banner-button"  %>
    </div>
    <div class="flex-item">
      <div class="booking-banner-image">
        <%# <img src="couple_at_home.png" alt="Couple embracing" width="200" height="300"> %>
      </div>
    </div>
  </div>
</div>
