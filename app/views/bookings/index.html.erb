<div class="container text-center">
  <%# <div class="row justify-content-center mb-3">
    <h3 class="text-center mb-0"> Your Bookings </h3>
  </div> %>

  <% @bookings.each do |booking| %>
    <% if booking.upcomming_booking? %>
      <% unless booking.suprise? && booking.secret_list.includes(current_user.partner.id.to_s)%>
    <div class="row justify-content-center mb-3">
      <h4 class="text-start mb-0"> Upcoming Bookings </h4>
    </div>
      <%= render 'bookings/book', {booking: booking} %>
      <% else %>
    <div class="row justify-content-center mb-3">
      <h4 class="text-start mb-0"> Past Bookings </h4>
    </div>
      <%= render 'bookings/secret_book', {booking: booking} %>
      <% end %>
    <% end %>
  <% end %>
</div>
