<div class="row m-2">
  <div class="card">
    <div class="row g-0">

      <div class="col-md-4">
        <%= image_tag 'secret_booking.png', class: "secret_img", crop: :fill %>
      </div>

      <div class="col-md-8 text-start">
        <div class="card-body" style="margin-left: 15px;margin-top: 30px;">

          <p class="card-title" style="color: #003865;">
            An Unknown Date orgainsed by <%= current_user.partner.name %>
          </p>

          <p class="card-title" style="color: #003865;">
            <%= "You are booked in for: #{booking.when.strftime('%d-%m-%Y')}" %>
          </p>

          <p class="card-title" style="color: #003865;">
            Your Instructions are
            <%= "#{booking.secret_instructions}" %>
          </p>

          </div>
        </div>

    </div>
  </div>
</div>
