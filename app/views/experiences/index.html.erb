<div class="container text-center">
  <div class="row align-items-center justify-content-between mb-4 mt-5">
    <div class="col-12 col-md-6">
        <h1 class="text-start mb-0"> Discover New Experiences </h1>
    </div>

    <div class="col-12 col-md-6">
    <%= form_with url: experiences_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an experience"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <% @experiences.each do |experience| %>
    <div class="col">
        <%= render 'experiences/index_card', {experience: experience} %>
    </div>
      <% end %>
  </div>
</div>
